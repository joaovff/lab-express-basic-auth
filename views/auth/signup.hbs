<h2>Signup</h2>

<form action="/signup" method="post">

  <label>
    Username
    <input type="text" name="username" placeholder="Your username" required />
  </label>

  <label>
    Passoword
    <input type="password" name="password" placeholder="*********" required />
  </label>

  <button type="submit">Create an account</button>
</form>

{{#if errorMessage}}
  <p>{{errorMessage}}</p>
{{/if}}